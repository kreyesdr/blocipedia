<div class="container">
  <h3 class="text-center">My wikis</h3>

  <table class="table table-bordered">
    <tbody>
    <tr>
      <th>Title</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
    <tr>
      <% @wiki.each do |item| %>
          <td><%= link_to item.title, wiki_path(item) %></td>
      <td>
        <% if policy(item).edit? %>
            <%= link_to 'Edit', edit_wiki_path(item), class: 'btn btn-success' %>
       <% else %>
            <p>No access</p>
        <% end %>
      </td>
      <td>
        <% if policy(item).destroy? %>
            <%= link_to 'Delete Wiki', item, method: :delete, class: 'btn btn-danger' %>
        <% else %>
            <p>No access</p>
        <% end %>
      </td>
    </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New wiki', new_wiki_path, class: 'btn btn-success' %>
</div>
